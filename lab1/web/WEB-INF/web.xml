         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Quick Servlet Demo Application</display-name>

    <servlet>
        <servlet-name>HomeworkServlet</servlet-name>
        <servlet-class>ro.uaic.info.lab1.HomeworkServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeworkServlet</servlet-name>
        <url-pattern>/homework</url-pattern>
    </servlet-mapping>
</web-app>